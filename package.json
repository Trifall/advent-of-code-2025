	"license": "GPL-3.0-or-later",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"bun-types": "latest",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"prettier": "3.7.0",
		"typescript": "^5.9.3",
		"oxlint": "^1.31.0"
	},
	"scripts": {
		"prepare": "husky",
		"format": "prettier -c --ignore-path .gitignore --log-level warn \"./**/*.{js,jsx,ts,tsx,css,json}\" ",
		"format:fix": "prettier --ignore-path .gitignore --log-level warn --write \"./**/*.{js,jsx,ts,tsx,css,json}\" ",
		"lint": "oxlint ./src",
		"lint:fix": "oxlint ./src --fix",
		"fullcheck": "bun run lint:fix && bun run format:fix"
	},
	"dependencies": {
		"@trivago/prettier-plugin-sort-imports": "^6.0.0"
	}
}
